<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ProductoServlet</servlet-name>
        <servlet-class>Controller.ProductoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Signup</servlet-name>
        <servlet-class>Controller.Signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signupServlet</servlet-name>
        <servlet-class>Controller.signupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartSevlet</servlet-name>
        <servlet-class>Controller.CartSevlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createServlet</servlet-name>
        <servlet-class>Controller.createServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DireccionServlet</servlet-name>
        <servlet-class>Controller.DireccionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>compra_generada</servlet-name>
        <servlet-class>Controller.compra_generada</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductoServlet</servlet-name>
        <url-pattern>/ProductoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Signup</servlet-name>
        <url-pattern>/Signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signupServlet</servlet-name>
        <url-pattern>/signupServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartSevlet</servlet-name>
        <url-pattern>/CartSevlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createServlet</servlet-name>
        <url-pattern>/createServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DireccionServlet</servlet-name>
        <url-pattern>/DireccionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>compra_generada</servlet-name>
        <url-pattern>/compra_generada</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
